<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CovidTracer.Views.AboutPage"
             Title="{Binding Title}">

    <StackLayout Margin="15,25,15,35">

        <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="CovicTracer ID"
                   FontSize="Title"
                   HorizontalOptions="Center"/>

            <Label Text="{Binding AppId}"
                   FontSize="Title"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label FontSize="Caption"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               Text="Cet identifiant vous identifie anonymement auprès des autres utilisateurs de l'application."/>
        </StackLayout>

        <Label FontSize="Caption"
               HorizontalTextAlignment="Center"
               Text="CovidTracer est une application libre et gratuite."/>

        <Button FontSize="Caption"
                Text="https://github.com/RaphaelJ/covid-tracer"
                BackgroundColor="Transparent"
                TextColor="Blue"
                Clicked="OnWebsiteClicked"/>
    </StackLayout>
</ContentPage>
